<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="compte_locataire">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="rib" type="VARCHAR(500)"/>
        <column name="solde" type="NUMERIC"/>

        <column name="banque_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="locataire_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="compte_locataire"
              baseColumnNames="banque_id"
              referencedTableName="banque"
              referencedColumnNames="id"
              constraintName="fk_compte_locataire_banque"/>
      <addForeignKeyConstraint
              baseTableName="compte_locataire"
              baseColumnNames="locataire_id"
              referencedTableName="locataire"
              referencedColumnNames="id"
              constraintName="fk_compte_locataire_locataire"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="compte_locataire_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/finance/CompteInstantanee.csv"
            tableName="compte_locataire">
      <column name="id" type="NUMERIC"/>
          <column name="rib" type="STRING"/>
          <column name="solde" type="NUMERIC"/>
        <column name="banque" type="BIGINT"/>
        <column name="locataire" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
